<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    >

    <!-- 기존 ConstraintLayout 내용 -->

    <androidx.cardview.widget.CardView
        android:id="@+id/station_card1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/station_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_sub">

            <TextView
                android:id="@+id/textViewDestination"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewArrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="분"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDestination" />

<!--            <TextView-->
<!--                android:id="@+id/trainTimeSecond"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginEnd="100dp"-->
<!--                android:text="분"-->
<!--                android:textSize="26sp"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                tools:layout_editor_absoluteY="41dp" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>